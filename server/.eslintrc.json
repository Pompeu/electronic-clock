{
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        }
    },
    "plugins": [
        "standard"
    ],
    "env": {
        "browser": false,
        "node": true,
        "mocha": true
    },
    "rules": {
      "eqeqeq": ["error", "smart"],
      "semi": ["error","always"],
      "curly": "error",
      "prefer-const": "warn",
      "no-const-assign": "error",
      "no-var": "error",
      "operator-assignment": ["error", "always"],
      "no-cond-assign": ["error","always"],
      "key-spacing": [
        "error",
        {
          "beforeColon": false,
          "afterColon": true,
          "mode": "minimum",
          "align": "value"
        }
      ],
      "no-multi-spaces": [
        "error", {
          "exceptions": {
            "VariableDeclarator": true
          }
        }
      ]
    }
}
